    <div class="container table-container" style="display:flex;row-gap:100px;">
        <div>
            <form action="/" method="POST">
            <label for="date">Select a date:</label>
            <input type="date" id="date" name="date">
            <button id="s1" type="submit">Submit</button>
            </form>
            <style>
                /* Style the label */
                label {
                    display: block;
                    margin-bottom: 10px;
                }

                /* Style the date input */
                input[type="date"] {
                    padding: 10px;
                    border: none;
                    border-radius: 5px;
                    background-color: #f2f2f2;
                    font-size: 16px;
                    color: #555;
                }

                /* Style the calendar icon */
                input[type="date"]::-webkit-calendar-picker-indicator {
                    position: relative;
                    background-color: transparent;
                    width: 30px;
                    height: 30px;
                    color: #555;
                }

                input[type="date"]::-webkit-calendar-picker-indicator:before {
                    content: "\1F4C5";
                    font-size: 20px;
                    position: absolute;
                    top: 4px;
                    left: 4px;
                }

                input[type="date"]::-webkit-calendar-picker-indicator:hover {
                    cursor: pointer;
                }
                #s1{
                    margin-top: 5px;
                    margin-left: 5px;
                    color:lightblue;
                    background-color: green;
                    height: 25px;
                    width:50px;
                }
            </style>
        </div>
        <div style="position: relative;float: right;">
            <table border="1" cellspacing="0" cellpadding="5">
                <tr>
                    <th>Faculty Name</th>
                    <th>8:40-9:30</th>
                    <th>9:30-10:20</th>
                    <th>10:20-11:10</th>
                    <th>11:10-12:00</th>
                    <th>12:50-1:40</th>
                    <th>1:40-2:30</th>
                    <th>2:30-3:20</th>
                    <th>3:20-4:10</th>
                </tr>
                <% var k=0; %>
                    <% while(k < result.length) { %>

                        <tr>
                            <th>
                                <%= result[k].faculty %>
                            </th>
                            <% for (var i=1; i <=8; i++) { %>
                                <% var found=false; %>
                                    <% for (var j=0; j < results.length; j++) { %>
                                        <% if (results[j].faculty==result[k].faculty && results[j].hour==i) { %>
                                            <% if(results[j].year !='' && results[j].subject !='' ) { %>
                                                <th>
                                                    <%= results[j].subject %> - <%= results[j].year %>
                                                            <%= results[j].section %>
                                                </th>
                                                <% } else { %>
                                                    <th>-</th>
                                                    <% } %>
                                                        <% found=true; %>
                                                            <% break; %>
                                                                <% } %>
                                                                    <% } %>
                                                                        <% if (!found) { %>
                                                                            <th>-</th>
                                                                            <% } %>
                                                                                <% } %>
                        </tr>
                        <% k++; %>
                            <% } %>
                                <!-- Add more rows for other faculties -->
            </table>
        </div>
